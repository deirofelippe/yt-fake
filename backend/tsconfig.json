{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2019",
    "lib": ["ES2019"],
    "strict": true,
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "strictNullChecks": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "coverage", "reports"]
}
